{
  "name": "docmaster-ai",
  "displayName": "DocMaster AI",
  "description": "Parse unstructured documents (PDF, PPTX) into executive insights and reports",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:docmasterAi.chatView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "docmasterAi-sidebar",
          "title": "DocMaster AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "docmasterAi-sidebar": [
        {
          "type": "webview",
          "id": "docmasterAi.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "DocMaster AI",
      "type": "object",
      "properties": {
        "docmaster.LlamaParseApiKey": {
          "type": "string",
          "default": "",
          "order": 1,
          "markdownDescription": "%config.llamaParseApiKey.desc%"
        },
        "docmaster.LLMProvider": {
          "type": "string",
          "enum": [
            "openai",
            "claude",
            "gemini"
          ],
          "default": "openai",
          "order": 2,
          "description": "%config.llmProvider.desc%"
        },
        "docmaster.LLMApiKey": {
          "type": "string",
          "default": "",
          "order": 3,
          "markdownDescription": "%config.llmApiKey.desc%"
        },
        "docmaster.OutputFormat": {
          "type": "string",
          "enum": [
            "md",
            "html"
          ],
          "default": "html",
          "order": 4,
          "markdownDescription": "%config.outputFormat.desc%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.7",
    "form-data": "^4.0.0",
    "openai": "^4.28.0"
  }
}
